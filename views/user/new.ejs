<% include ../partials/header %>
<div class="container">
  <div class="jumbotron">
    <h2>Create a new account<h2>
    <form action="/user/new" method="post">
      <div class="form-group">
        <input type="text" name="username" placeholder="Username *" class="form-control" pattern=".{5,}" required=true>
        <small class="form-text text-muted">login must be at least 5 character</small>
        <input type="email" name="mail" placeholder="mail *" class="form-control" required=true>
        <input type="text" name="name" placeholder="name *" class="form-control" required=true>
        <input type="text" name="firstname" placeholder="firstname *" class="form-control" required=true>
        <input type="password" name="password" placeholder="Password *" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required=true>
        <small class="form-text text-muted">Password must be at least 8 character and contain min MAJ and number</small>
      </div>
      <input type='submit' class="btn btn-default btn-primary" value="Sign In">
      <a class="btn btn-default btn-warning" href="/login">already got an account</a>
    </form>
  </div>
</div>
<% include ../partials/footer %>
