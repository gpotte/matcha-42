<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/css/profile.css" />
<h1 id="username"><%=user.username%>
  <%if (user.sex === "male"){%> <i class="fa fa-mars" aria-hidden="true"></i>
  <%} else if (user.sex === "female"){%>
    <i class="fa fa-venus" aria-hidden="true"></i><%}%>
</h1>
<div class="row">
  <div class="col-xs-3"></div>
<% if (user.photo && user.photo.length > 0) { %>
<div id="userCarousel" class="carousel slide col-xs-6" data-ride="carousel">
  <ol class="carousel-indicators">
    <%for (var i = 0; i < user.photo.length; i++) {%>
    <li data-target"#userCarousel" data-slide-to="<%=i%>" <%if (i === 0){%> class=active <%}%>></li>
    <%}%>
  </ol>

  <!-- Wrapper for slides -->

  <div class="carousel-inner">
    <% for (i in user.photo) { %>
      <% if (i == 0) {%>
        <div class="item active"><img src="<%=user.photo[i]%>"></img></div>
      <% } else {%>
        <div class="item"><img src="<%=user.photo[i]%>"></img></div>
    <%}}%>
  </div>
  <!-- Left and right controls -->
  <a class="left carousel-control" href="#userCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#userCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<%}%>
<div class="col-xs-3"></div>
</div>
<h3><strong> <%=user.firstName%> </strong> <%=user.name%> </h3><br>
<p><%=user.bio%></p>


<% include ../partials/footer %>
