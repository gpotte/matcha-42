<% include ../partials/header %>
<div class="container">
  <div class="jumbotron">
    <h2>Password Reset<h2>
    <form id="resetForm">
      <div class="form-group">
        <input id="password" type="password" name="password" placeholder="new Password" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required=true>
        <input type="password" name="confirm" placeholder="confirm new password" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required=true>
        <small id="passwordCond" class="form-text text-muted inactive">Password must be at least 8 character and contain min MAJ and number</small>
        <input type="hidden" name="id" value=<%=id%>>
        <input type="hidden" name="token" value=<%=token%>>
      </div>
      <input type='submit' class="btn btn-default btn-primary" value="Submit">
    </form>
  </div>
</div>
<script src="/js/form.js"></script>
<% include ../partials/footer %>
